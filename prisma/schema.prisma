generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL")
}

model User {
  id        String @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  WeatherReports WeatherReport[]
  NewsArticles   NewsArticle[]
  Transactions   Transaction[]
}

model WeatherReport {
  id          String @id @default(cuid())
  temperature Float
  humidity    Float
  windSpeed   Float
  description String
  reportTime  DateTime @default(now())
  location    String
  userId      String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model NewsArticle {
  id          String @id @default(cuid())
  title       String
  content     String
  publishedAt DateTime
  author      String
  userId      String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Transaction {
  id             String @id @default(cuid())
  amount         Float
  currency       String
  transactionDate DateTime @default(now())
  userId         String
  status         String
  createdAt      DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])
}

